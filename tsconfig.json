//* https://www.staging-typescript.org/tsconfig

{
    "compilerOptions": {  // 컴파일 옵션
      "strict": true,
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES5",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "incremental": true
    },
    "include": ["src/**/*"] // 어떤 것을 컴파일할지 설정 옵션
  }
  